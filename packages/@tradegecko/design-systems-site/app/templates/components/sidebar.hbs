<div class="sidebar">
    <div class="sidebar__logo">
      <img src="https://d3h6ue1fvxa32i.cloudfront.net/assets/tradegecko-mark-3433f1602d5b9c9963f77aaba9fd62cab8d159c2321019719e539434c7f81276.svg" width="70">
    </div>
    {{log @navigation}}
    {{#each-in @navigation as |index nav|}}
    {{#link-to "page" nav.path}}
      <h2 class="sidebar__title">{{nav.label}}</h2>
    {{/link-to}}

      <ul>

        {{#each nav.children as |page|}}
          <li>
          {{#link-to "page" page.path}}
            {{page.label}}
          {{/link-to}}
          </li>
        {{/each}}
      </ul>
    {{/each-in}}
</div>
